#
# USB virtual devices
#

menuconfig VIRTUAL_USB
	   tristate "Virtual USB support"
	   help 
	   	Menu for virtual udc

if VIRTUAL_USB

 # Framework for virtual
config VIRTUAL_USB_FW
       tristate "Framework for virtual USB devices (DEVELOPMENT)"
       depends on USB=y || (USB=m && USB_GADGET=m)
       help
	Just a framework

config VIRTUAL_UDC_AND_HCD
       depends on VIRTUAL_USB_FW
       tristate "hcd and udc temporary in one"

config VIRTUAL_USB_UDC
       tristate "Virtual UDC"
       depends on USB=y || (USB=m && USB_GADGET=m)
config VIRTUAL_USB_HCD
       tristate "Virtual HCD"
       depends on USB=y || (USB=m && USB_GADGET=m)

config VIRTUAL_USB_DEVICES
       tristate "Register virtual devices"
       depends on ((VIRTUAL_USB_UDC=y || VIRTUAL_USB_UDC=m) && (VIRTUAL_USB_HCD=y || VIRTUAL_USB_HCD=m))

endif # VIRTUAL_USB

